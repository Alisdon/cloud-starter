
.field {
	height: 2.5rem;
	display: grid;
	grid-template-columns: auto 1fr;
	align-content: center;
	margin-bottom: 1rem;
	& > label {
		@mixin typo-label{};
		margin-right: 1rem;
	}

	& > input, & > textarea, & > .ctrl  { 
		background: #fff;
		@mixin typo-body1{};
		border-radius: 5px;
		border: solid 1px var(--bdr-light);
		padding-left: .5rem;
	}
}